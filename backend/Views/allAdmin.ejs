<div class="container container_liste nice_nical_benito">
    <div class="hide" id="add"></div>
    <div class="row ">
        <% if(typeof message !== 'undefined'){ %>
            <div class="alert alert-success" role="alert">
                <%= message %>
            </div>
        <%} ;%>
        <div class="header_liste d-flex">
            <div class="d-flex">
                <i class="bx bx-collection"></i>
                <h3 class="text_header  ">
                    Liste des utilisateurs
                </h3>
            </div>
            <a href="/addingAdmin" class="btn_ajout_item">
                Ajouter utilisateur
            </a>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Admin Login</th>
                    <th scope="col">Prenom</th>
                    <th scope="col">Nom</th>
                    <th scope="col">Options</th>
                </tr>
            </thead>
            <tbody>
                <% let i=0 ; ad.forEach(admin=> { %>
                    <tr>
                        <th scope="row">
                            <%= ++i %>
                        </th>
                        <td>
                            <%= admin._Login %>
                        </td>
                        <td>
                            <%= admin._FirstName %>
                        </td>
                        <td>
                            <%= admin._LastName %>
                        </td>
                        <td>
                            <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                                <a href="/updatingAdmin/<%= admin._id %>">
                                    <button type="button" class="btn update_btn">Update</button></a>
                                <a href="/deleteAdmin/<%= admin._id %>">
                                    <button type="button" class="btn delete_btn">Delete</button>
                                </a>
                            </div>
                        </td>
                    </tr>
                    <% }); %>
            </tbody>
        </table>
    </div>
</div>