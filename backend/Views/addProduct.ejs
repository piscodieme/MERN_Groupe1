<div class="container">
    <form action="/products" enctype="multipart/form-data" method="post" class="row g-3">
        <div class="col-12">
            <label for="name" class="form-label">Product Name</label>
            <input type="text" class="form-control" name="name">
        </div>
        <h4>Category</h4>
        <div class="col-12">
            <ul class="list-group">
                <% cat.forEach(category=> { %>
                <li class="list-group-item">
                    <input class="form-check-input me-1" type="checkbox" name="category[]" value="<%= category._Name %>" aria-label="...">
                    <%= category._Name %>
                    <% if(category._SubCategory.length != 0) {%>
                    <ul class="list-group">
                        <% category._SubCategory.forEach(sub=> {%>
                        <li class="list-group-item">
                            <input class="form-check-input me-1" type="checkbox" name="category[]" value="<%= sub %>" aria-label="...">
                            <%= sub %>
                        </li> 
                        <% }); %>
                    </ul>
                    <% } %>
                </li>
                <% }); %>
            </ul>
        </div>
        <div class="col-md-6">
            <label for="frame" class="form-label">Image</label>
            <input type="file" class="form-control" name="frame">
        </div>
        <div class="col-md-6">
            <label for="image" class="form-label">Others Images</label>
            <input type="file" class="form-control" name="images" multiple>
        </div>
        <div class="col-md-6">
            <label for="price" class="form-label">Price</label>
            <input type="text" class="form-control" name="price">
        </div>
        <div class="col-md-6">
            <label for="promo" class="form-label">Promo</label>
            <input type="text" class="form-control" name="promo">
        </div>
        <div class="col-md-6">
            <label for="long" class="form-label">Description</label>
            <textarea class="form-control" name="long" rows="3"></textarea>
        </div>
        <div class="col-md-4">
            <label for="short" class="form-label">Short Description</label>
            <textarea class="form-control" name="short" rows="3"></textarea>
        </div>
        <div class="col-md-2">
            <label for="quantity" class="form-label">Quantity</label>
            <input type="text" class="form-control" name="quantity">
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </form>
</div>